@using Presentation.Shop.Models
@model ProductModel

<div class="card product-item">
    <div class="card-image">
        <a href="@Url.Action("Detail", "Products", new { id = Model.Id })">
            <img src="@Model.PathToImage" class="card-img-top" alt="https://www.prameyanews.com/wp-content/uploads/2019/12/packaged-food.jpg">
        </a>
    </div>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <div class="card-text">
                <p>@Model.ShortDescription</p>
                <p>Category: @Model?.Category?.Name</p>
                <p>Price: @Model.Price UAH</p>
                <div style="display:flex; flex-direction: row;">
                    @if (Model.Number > 0)
                    {
                        <p style="color:green">Available</p>
                    }
                    else
                    {
                        <p style="color:red">Not available</p>
                    }
                    <div style="margin-left: auto;">
